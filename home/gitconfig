[user]
  email = hello@pb.io
  name = Philipp Bosch
  signingkey = 1413FC35212713CD

[core]
  excludesfile = ~/.gitignore
  quotepath = false
  pager = diff-so-fancy | less --tabs 4 -RFX
  checkStat = minimal  # Prevent rebase and status errors in VS Code devcontainers (Docker volume metadata quirks)

[github]
  user = philippbosch

[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto

[alias]
  st = status -s -b
  ci = commit --verbose
  co = checkout
  di = diff
  dc = diff --cached
  cp = cherry-pick
  amend = commit --amend --no-edit
  recommit = commit --amend --no-edit
  aa = add --all
  ap = add -p
  ff = merge --ff-only
  pull = pull --rebase
  pullff = pull --ff-only
  fa = fetch --all
  pom = push origin master
  hist = "log --pretty=format:\"%h | %ad | %s%d [%an]\" --graph --date=short"
  msg = commit --allow-empty -m
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  unstage = reset HEAD
  new = ls-files --others --exclude-standard
  added = diff --cached --name-only
  rv = remote -v
  b = branch
  ds = diff --staged
  rfom = fetch origin main
  rbom = rebase origin/main
  rc = rebase --continue
  ra = rebase --abort
  rom = !git rfom && git rbom
  blast = !git for-each-ref --sort=-committerdate --color=always --format='%(if)%(HEAD)%(then)* %(color:green)%(refname:short)%(color:reset)%(else)  %(refname:short)%(end)|%(color:blue)%(committerdate:relative)%(color:reset)|%(color:bold black)%(authorname)%(color:reset)|%(contents:subject)' refs/heads/ | column -t -s '|' | fzf --ansi | cut -b3- | awk '{ print $1 }' | xargs git switch

  # Fancy logging.
  #   h = head
  #   hp = head with patch
  #   r = recent commits, only current branch
  #   l = all commits, only current branch
  head = !git r -1
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !GIT_NO_PAGER=1 git l -30
  l = "!. ~/.githelpers && pretty_git_log"

[push]
  # Push current branch even if you've never pushed it before
  default = current
  autoSetupRemote = true

[help]
  autocorrect = 1

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

[include]
  path = .gitconfig.local

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process

[pack]
  windowMemory = 100m
  SizeLimit = 100m
  threads = 1
  window = 0

[init]
  defaultBranch = main

